@model TodoListApp.Models.Todo

@{
    ViewData["Title"] = "Create";
}
<script src="https://cdn.jsdelivr.net/npm/vue@2.6.14/dist/vue.js"></script>

<h1>Create</h1>

<h4>Todo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" id="app">
                <label asp-for="TodoItem" class="control-label"></label>
                <input asp-for="TodoItem" class="form-control" v-model="userInput" />
                <span asp-validation-for="TodoItem" class="text-danger"></span>
                <p>Todo item: {{ userInput }}</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script>
    new Vue({
        el: "#app",
        data: {
            userInput: "",
        },
    });
</script>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
